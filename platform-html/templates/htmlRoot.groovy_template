    <style>
         .horiz > *{
			 display: inline-block;
			 white-space: nowrap;
			 margin: 0px;
         }
		 
         .vert > *{
			display: table;
			white-space: normal;
			margin: 0px;
         }

		.vert{
			vertical-align: top;
		}
			
		.horiz{
			vertical-align: top;
		}		 
        .content {
            font-size: 21px;
